    <update id="updateSetMeal">
        update setmeal
        <set>
            update_time = #{updateTime},
            update_user = #{updateUser},
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="price != null">price = #{price},</if>
            <if test="status != null">status = #{status},</if>
            <if test="description != null">description = #{description},</if>
            <if test="image != null">image = #{image},</if>
        </set>
        where id = #{id}
    </update>


    <select id="getSellingSetMealByIds" resultType="java.lang.Long">
        select
            id
        from setmeal
        where status = 1
        and id in 
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <delete id="deleteSetMealByIds">
        delete
        from setmeal
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>


    <select id="getSetMealImagesByIds" resultType="java.lang.String">
        select
            image
        from setmeal
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <select id="getAllStatusSetMealCount" resultType="com.sky.vo.SetmealOverViewVO">
        select
            (select count(1) from setmeal where status = 1) as sold,
            (select count(1) from setmeal where status = 0) as discontinued
    </select>









    <!--    新增套餐-->
    <insert id="insert">
        insert into sky_take_out.setmeal(category_id, name, price, status, description, image, create_time, update_time,
                                         create_user, update_user)
        VALUES (#{categoryId}, #{name}, #{price}, #{status}, #{description}, #{image}, #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>

    <!--    套餐分頁查詢-->
    <select id="pageQuery" resultType="com.sky.vo.SetmealVO">
        select s.*, c.name
        from sky_take_out.setmeal s
        left join sky_take_out.category c on s.category_id = c.id
        <where>
            <if test="name != null">and s.name like concat('%',#{name},'%')</if>
            <if test="categoryId != null">and s.category_id = #{categoryId}</if>
            <if test="status != null">and s.status = #{status}</if>
        </where>
        order by s.create_time desc
    </select>

<!--    封裝setMealResultMap-->
    <resultMap id="setMealResultMap" type="com.sky.vo.SetmealVO">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="status" property="status"/>
        <result column="description" property="description"/>
        <result column="image" property="image"/>
        <result column="update_time" property="updateTime"/>
        <result column="categoryName" property="categoryName"/>

<!--        封裝套餐中的菜品-->
        <collection property="setmealDishes" ofType="com.sky.entity.SetmealDish">
            <id column="sd_id" property="id"/>
            <result column="sd_setmealid" property="setmealId"/>
            <result column="sd_dishid" property="dishId"/>
            <result column="sd_name" property="name"/>
            <result column="sd_price" property="price"/>
            <result column="sd_copies" property="copies"/>
        </collection>
    </resultMap>
    
<!--    根據ID查詢套餐-->
    <select id="getSetMealById" resultMap="setMealResultMap">
        select
            s.*,
            sd.id sd_id,
            sd.setmeal_id sd_setmealid,
            sd.dish_id sd_dishid,
            sd.name sd_name,
            sd.price sd_price,
            sd.copies sd_copies
        from sky_take_out.setmeal s
                 left join sky_take_out.setmeal_dish sd on s.id = sd.setmeal_id
        <where>
            s.id = #{id}
        </where>
    </select>

<!--    根據主鍵ID更新套餐基本信息-->
    <update id="updateById">
        update sky_take_out.setmeal
        set
            category_id = #{categoryId},
            name = #{name},
            price = #{price},
            status = #{status},
            description = #{description},
            update_time = #{updateTime},
            update_user = #{updateUser}
        where id = #{id}
    </update>

<!--    根據主鍵ID刪除套餐-->
    <delete id="deleteByIds">
        delete from sky_take_out.setmeal where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>
